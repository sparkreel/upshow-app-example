<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <!--Import Google Icon Font-->
      <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <!--Import materialize.css-->
      <link type="text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"  media="screen,projection"/>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Admin Page</title>
</head>

<body>
    {{#if app_key}}
    <div class="card-panel row" >
        <form class="col s12" method="post" action="/settings" >
            <div class="row">
                <div class="col m12">
                    <span class="col m12" for="name">Name</span>
                    <input class="col m12" type="text" name="name" id="name" value="{{name}}" />
                </div>
            </div>
            <div class="row">
                <div class="col m12">
                    <span class="col m12" for="logo">Logo URL</span>
                    <input class="col m12" type="text" name="logo" id="logo" value="{{logo}}" />
                </div>
            </div>

            <input id="app_key" name="app_key" type="hidden" value="{{app_key}}">

            <div class="row">
                <button class="btn waves-effect waves-light indigo col s2 offset-s8" type="submit" name="action">Save
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </form>
    </div>
    {{else}}
    <div class="card-panel row">
        <h5 class="col s10 offset-s2" >⚠️ No app key provided - Please contact support</h5>
    </div>
    {{/if}}

    <!--JavaScript at end of body for optimized loading-->
      <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>

</html>